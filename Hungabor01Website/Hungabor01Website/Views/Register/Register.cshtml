@model RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}

@section Styles {
    <environment include="Development">
        <link href="~/css/login_registration.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/css/login_registration.min.css" rel="stylesheet" />
    </environment>
}

<div class="d-flex justify-content-center h-100">

    <div class="card">

        <div class="card-header">

            <h3>Sign Up</h3>

            <div class="d-flex justify-content-end social_icon">
                <a asp-action="ExternalLogin" asp-controller="Login" asp-route-provider="Facebook" asp-route-source="Register">
                    <span><i class="fab fa-facebook-square"></i></span>
                </a>
                <a asp-action="ExternalLogin" asp-controller="Login" asp-route-provider="Google" asp-route-source="Register">
                    <span><i class="fab fa-google-plus-square"></i></span>
                </a>
            </div>

        </div>

        <div class="card-body">

            <form method="post">

                <div asp-validation-summary="All" class="text-danger"></div>

                <span asp-validation-for="Username" class="text-danger"></span>
                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    <input type="text" class="form-control" placeholder="username" asp-for="Username">
                </div>

                <span asp-validation-for="Email" class="text-danger"></span>
                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-at"></i></span>
                    </div>
                    <input type="text" class="form-control" placeholder="email" asp-for="Email">
                </div>

                <span asp-validation-for="Password" class="text-danger"></span>
                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                    </div>
                    <input type="password" class="form-control" placeholder="password" asp-for="Password">
                </div>

                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                    </div>
                    <input type="password" class="form-control" placeholder="confirm password" asp-for="ConfirmPassword">
                </div>

                <div class="form-group">
                    <input type="submit" value="Sign Up" class="btn float-right login_btn">
                </div>

            </form>

        </div>

    </div>

</div>
