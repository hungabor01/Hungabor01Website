@model EditAccountViewModel

@{
    ViewData["Title"] = "EditAccount";
}

@section Styles {
    <environment include="Development">
        <link href="~/css/profile.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/css/profile.min.css" rel="stylesheet" />
    </environment>
}

<div>
    <h1>Edit Account</h1>

    <form enctype="multipart/form-data" asp-action="EditAccount" asp-controller="Profile" method="post" class="mt-3">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group upload-picture">
            <label asp-for="ProfilePicture" class="col-sm-4 col-form-label"></label>
            <span class="custom-file">
                <input asp-for="ProfilePicture" class="form-control custom-file-input">
                <label class="custom-file-label">Choose File...</label>
            </span>
        </div>

        <div class="form-group picture-buttons">
            <button type="submit" class="btn btn-primary">Update profile picture</button>
            <button style="float: right;" asp-action="DeleteProfilePicture" asp-controller="Profile" class="btn btn-primary">Remove profile picture</button>
        </div>

        @section Scripts {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }

    </form>

</div>

<div class="reset-password">
    <p>Do you want to change your password? <a asp-action="ResetPassword" asp-controller="Profile">Click here!</a></p>
</div>
