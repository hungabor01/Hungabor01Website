@model ResetPasswordViewModel

@{
    ViewBag.Title = "Reset Password";
}

@section Styles {
    <environment include="Development">
        <link href="~/css/login_registration.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/css/login_registration.min.css" rel="stylesheet" />
    </environment>
}

<div class="d-flex justify-content-center h-100">

    <div class="card">

        <div class="card-header">
            <h3>Reset Password</h3>
        </div>

        <div class="card-body">

            <form method="post">

                <div asp-validation-summary="All" class="text-danger"></div>

                <input asp-for="Token" type="hidden" />
                <input asp-for="Email" type="hidden" />

                <span asp-validation-for="Password" class="text-danger"></span>
                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                    </div>
                    <input type="password" class="form-control" placeholder="password" asp-for="Password">
                </div>

                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                    </div>
                    <input type="password" class="form-control" placeholder="confirm password" asp-for="ConfirmPassword">
                </div>

                <div class="form-group">
                    <input type="submit" value="Reset Password" class="btn float-right login_btn">
                </div>

            </form>

        </div>

    </div>

</div>
