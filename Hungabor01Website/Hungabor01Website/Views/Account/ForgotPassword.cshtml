@model ForgotPasswordViewModel

@{
  ViewBag.Title = "Forgot Password";
}

@section Styles {
  <environment include="Development">
    <link href="~/css/login_registration.css" rel="stylesheet" />
  </environment>
  <environment exclude="Development">
    <link href="~/css/login_registration.min.css" rel="stylesheet" />
  </environment>
}

<div class="d-flex justify-content-center h-100">
  <div class="card">
    <!--start of header-->
    <div class="card-header">
      <h3>Forgot Password</h3>      
    </div>
    <!--end of header-->
    <!--start of body-->
    <div class="card-body">
      <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <!--start of email-->
        <span asp-validation-for="Email" class="text-danger"></span>
        <div class="input-group form-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-at"></i></span>
          </div>
          <input type="text" class="form-control" placeholder="email" asp-for="Email">
        </div>
        <!--end of email-->
        <div class="form-group">
          <input type="submit" value="Send Email" class="btn float-right login_btn">
        </div>
      </form>
    </div>
    <!--end of body-->
  </div>
</div>
